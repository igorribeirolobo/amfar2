	<body style="background:#e4e4e4">
		<fieldset>
			<legend>Envie este link a seus amigos!</legend>
			<form action="" method="post" name="indique" id="indique">
				<input type="hidden" id="msg" value="<?=$this->message?>" />
				<table border="0" cellspacing="0" cellpadding="0" width="100%">
					<caption><br />Envie este link a seus amigos!</caption>
					<tr>
						<td align="center" colspan=2 class="tbCaption"><b style="color:#fff"><?= $titulo?></td></tr>
							
					<tr>
						<td class="label">Seu Nome:</td>
						<td>
							<input type="text" class="text upper" id="namefrom" name="namefrom" value="<?=$_POST['namefrom']?>" maxlength="50" />
						</td>
					</tr>
							
					<tr>
						<td class="label">Seu E-mail:</td>
						<td>
							<input type="text" class="text lower" name="mailfrom" id="mailfrom" value="<?=$_POST['mailfrom']?>" maxlength="80" />
						</td>
					</tr>
								
					<tr>
						<td class="label">Estado:</td>
						<td>
							<select name="uffrom" id="uffrom" size="1">						
								<option value="">Selecione o Estado</option><?
								foreach($this->estados as $rs):
									$selected = ($_POST['uffrom']==$rs->uf) ? 'selected' : null;
									echo"<option $selected value='$rs->uf'>$rs->estado</option>";
								endforeach; ?>
							</select>
						</td>
					</tr>
						
					<tr>
						<td align="center" colspan="2" nowrap>				
							<input type="checkbox" name="mailing" value="ON" checked>
								<b class="negrito">Autorizo o envio e E-mailing para o e-mail acima.</small>
						</td></tr>
						
					<tr><td colspan="2" style="padding:10px 0"><hr size=1"></td></tr>
						
					<tr>
						<td class="label">Amigo(a):</td>
						<td>
							<input type="text" class="text upper" id="nameto" maxlength="50" name="nameto" value="<?=$_POST['nameto']?>" />
						</td>
					</tr>
							
					<tr>
						<td class="label">E-mail:</td>
						<td>
							<input type="text" class="text lower" id="mailto" name="mailto" value="<?=$_POST['mailto']?>" maxlength="80" />
						</td>
					</tr>
			
					<tr>
						<td class="label">Estado:</td>
						<td>
							<select name="ufto" id="ufto" size="1">						
								<option value="">Selecione o Estado</option><?
								foreach($this->estados as $rs):
									$selected = ($_POST['ufto']==$rs->uf) ? 'selected' : null;
									echo"<option $selected value='$rs->uf'>$rs->estado</option>";
								endforeach; ?>
							</select>
						</td>
					</tr>				
			
					<tr>
						<td align="center" colspan="2" height="30"><br />
							<input type="submit" id="btIndique" name="btIndique" value="Enviar Link" class="button" />
						</td>
					</tr>
				</table>
			</form>
		</fieldset>
	</body>
</html>
