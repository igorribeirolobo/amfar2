		<script language="javascript" type="text/javascript">
			 $(document).ready(function(){
				if ($.browser.msie) {
					}
				else {
					$('fieldset').css('border-width','1px');
					$('fieldset').css('border-color','#369');
					$('fieldset').css('-moz-border-radius','10px');
					$('fieldset').css('-webkit-border-radius','10px');
					$('fieldset').css('border-radius','10px');
					}

				$('.text').focus(function(){$(this).css('background','#E0E4F9')}).blur(function(){$(this).css('background','#fff')})
				$('.upper').keyup(function(){$(this).val($(this).val().upper())})
				$('.lower').keyup(function(){$(this).val($(this).val().lower())})				
				
				$('#btIndique').click(function(){
					if($('#namefrom').val().trim()==''){
						alert('Por favor digite seu nome!');
						$('#namefrom').focus();
						return false;
						}
					if($('#mailfrom').val().trim()==''){
						alert('Por favor digite seu email!');
						$('#mailfrom').focus();
						return false;
						}				
					if(!$('#mailfrom').val().validEmail()){
						alert('Por favor digite corretamente seu email!');
						$('#mailfrom').focus();
						return false;
						}
					if($('#uffrom').val()==''){
						alert('Por favor selecione seu estado!');
						$('#uffrom').focus();
						return false;
						}

					if($('#nameto').val().trim()==''){
						alert('Por favor digite o nome do(a) amigo(a)!');
						$('#nameto').focus();
						return false;
						}
					if($('#mailto').val().trim()==''){
						alert('Por favor digite o email do(a) amigo(a)!');
						$('#mailto').focus();
						return false;
						}				
					if(!$('#mailto').val().validEmail()){
						alert('Por favor digite corretamente o email do(a) amigo(a)!');
						$('#mailto').focus();
						return false;
						}
					if($('#ufto').val()==''){
						alert('Por favor selecione o estado do(a) amigo(a)!');
						$('#ufto').focus();
						return false;
						}
					})
				
				if ($('#msg').val()!='' && $('#msg')!= undefined) alert($('#msg').val());
				})

		</script>
		
		
		<style type="text/css">			
			#indique{font-family:Arial, Helvetica, Sans-Serif, Tahoma, Verdana;font-size:12px}
