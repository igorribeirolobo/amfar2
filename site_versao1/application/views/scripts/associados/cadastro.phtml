			if($uf.val()==''){alert("O campo 'Estado' é obrigatório!");$uf.focus();return false;}
			if($pais.val().trim()==''){alert("O campo 'País' é obrigatório!");$pais.focus();return false;}
			if($email.val()==''||!$email.val().validEmail()){alert("Digite corretamente o 'E-mail'!");$email.focus();return false;}
			if ($fone.val()==''){alert("Informe o DDD e o 'Telefone Residencial'!");$fone.focus();return false;}
