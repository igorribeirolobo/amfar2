			if($dataNcto.val()==''||!$dataNcto.val().validDate()){alert("Digite corretamente a 'Data de Nascimento'!");$dataNcto.focus();return false;}
			if($naturalidade.val()==''){alert("O campo 'Naturalidade' é obrigatório!\nDigite a cidade/estado");$naturalidade.focus();return false;}
			if($cep.val()==''){alert("Digite corretamente o 'CEP'!");$cep.focus();return false;}
